# Maintainer: SkorionOS
pkgname=skorionos-fastfetch-logo
pkgver=1.0.2
pkgrel=1
pkgdesc="SkorionOS custom logo for fastfetch with intelligent wrapper"
arch=('any')
url="https://github.com/3003n/skorionos"
license=('MIT')
depends=('fastfetch')
# backup=('usr/bin/fastfetch.orig')  # This file is created during installation
install=skorionos-fastfetch-logo.install
source=('skorionos.txt'
        'config.jsonc'
        'fastfetch-wrapper.sh')
sha256sums=('SKIP'
            'SKIP'
            'SKIP')

package() {
    # Install logo file
    install -Dm644 "$srcdir/skorionos.txt" "$pkgdir/usr/share/fastfetch/logos/skorionos.txt"
    
    # Install config as preset (not system default)
    install -Dm644 "$srcdir/config.jsonc" "$pkgdir/usr/share/fastfetch/presets/skorionos.jsonc"
    
    # Install wrapper script
    install -Dm755 "$srcdir/fastfetch-wrapper.sh" "$pkgdir/usr/bin/fastfetch-skorionos-wrapper"
}
