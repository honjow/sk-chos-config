        ["ONEXPLAYER 2 PRO ARP23P EVA-01"]="OXP-2ProEVA"
        ["ONEXPLAYER F1"]="OXP-F1"
        ["ONEXPLAYER F1 EVA-01"]="OXP-F1EVA"
        ["ONEXPLAYER F1 EVA-02"]="OXP-F1EVA2"
        ["ONEXPLAYER F1Pro"]="OXP-F1Pro"
        ["ONEXPLAYER F1 OLED"]="OXP-F1OLED"
        ["ONEXPLAYER X1"]="OXP-X1"
        ["ONEXPLAYER X1 i"]="OXP-X1i"
        ["ONEXPLAYER X1 A"]="OXP-X1A"
        ["ONEXPLAYER X1Pro EVA-02"]="OXP-X1ProEVA"
        ["ONEXPLAYER X1Air"]="OXP-X1Air"
        ["ONEXPLAYER X1 mini"]="OXP-X1Mini"
        ["ONEXPLAYER G1 A"]="OXP-G1A"
        ["ONEXPLAYER G1 i"]="OXP-G1i"
        
        # AOKZOE Series
        ["AOKZOE A1 AR07"]="AOK-A1"
        ["AOKZOE A1 Pro"]="AOK-A1Pro"
        ["AOKZOE A1X"]="AOK-A1X"
        ["AOKZOE A2 Pro"]="AOK-A2Pro"
        
        # AYANEO Series
        # ["AIR"]="AyaAir"
        # ["AIR Pro"]="AyaAirPro"
        # ["AIR Plus"]="AyaAirPlus"
        # ["AIR 1S"]="AyaAir1S"
        # ["AIR 1S Limited"]="AyaAir1SLtd"
        # ["SLIDE"]="AyaSlide"
        # ["FLIP DS"]="AyaFlipDS"
        # ["FLIP KB"]="AyaFlipKB"
        
        # AYN Series
        ["Loki Max"]="LokiMax"
        ["Loki Zero"]="LokiZero"
        ["Loki MiniPro"]="LokiMiniPro"
        
        # Steam Deck
        # ["Jupiter"]="SteamDeck"
        # ["Galileo"]="SteamDeckOLED"
        
        # ZOTAC
        ["ZOTAC GAMING ZONE"]="ZotacZone"
        
        # Minisforum
        ["V3"]="MiniV3"
        
        # ASUS Flow
        ["ROG Flow Z13"]="ROGFlowZ13"
    )
    
    local current_hostname
    local product_name
    local hostname
    
    current_hostname=$(hostnamectl --static)
    product_name=$(cat /sys/devices/virtual/dmi/id/product_name 2>/dev/null || echo "")
    
    # Check if product_name is empty
    if [[ -z "$product_name" ]]; then
        log_info "Product name is empty, keeping current hostname"
        return
    fi
    
    # Try exact match first (case-insensitive)
    for key in "${!hostname_mappings[@]}"; do
        if [[ "${product_name,,}" == "${key,,}" ]]; then
            hostname="${hostname_mappings[$key]}"
            break
        fi
    done
    
    # Try fuzzy match if no exact match found (case-insensitive)
    # Sort keys by length (longest first) to match more specific patterns first
    if [[ -z "$hostname" ]]; then
        while IFS= read -r key; do
            if [[ "${product_name,,}" == *"${key,,}"* ]]; then
                hostname="${hostname_mappings[$key]}"
                break
            fi
        done < <(printf '%s\n' "${!hostname_mappings[@]}" | awk '{ print length, $0 }' | sort -rn | cut -d' ' -f2-)
    fi
    
    # If no mapping found, use safe default processing
    if [[ -z "$hostname" ]]; then
        # Replace non-alphanumeric chars with hyphens, remove leading/trailing hyphens, collapse multiple hyphens
        hostname=$(echo "$product_name" | sed 's/[^a-zA-Z0-9-]/-/g; s/^-*//; s/-*$//; s/--*/-/g')
    fi
    
    # Fallback to default if still empty
    if [[ -z "$hostname" ]]; then
        hostname="SkorionOS"
    fi
    
    log_info "Setting hostname to $hostname (from: $product_name)..."
    sudo hostnamectl set-hostname "$hostname"
    if [[ "$current_hostname" != "$hostname" ]]; then
        sudo systemctl daemon-reload
        sudo systemctl restart systemd-hostnamed
        sudo systemctl restart avahi-daemon
    fi
}

function set_kernel_options() {
    log_info "Setting kernel options..."
    kernel_options_manager --append "quiet"
    kernel_options_manager --append "splash"
}

function update_udev_rules() {
    log_info "Updating udev rules..."
    sudo systemd-hwdb update
    sudo udevadm control --reload-rules
    sudo udevadm trigger
    sudo udevadm settle
}

function copy_efi_drivers() {
    efi_drivers_dir="/usr/local/share/sk-pre/efi-drivers"
    dst_efi_drivers_dir="${boot_mountpoint}/EFI/systemd/drivers"
    if [ ! -d "$dst_efi_drivers_dir" ]; then
        sudo mkdir -p "$dst_efi_drivers_dir"
    fi

    refind_drivers_dir="${boot_mountpoint}/EFI/refind/drivers_x64"

    for file in "$efi_drivers_dir"/*; do
        if [[ -f "$file" && $(file -b "$file") == *"executable"* ]]; then
            sudo cp -f "$file" "$dst_efi_drivers_dir"
            if [[ -d "$refind_drivers_dir" ]]; then
                sudo cp -f "$file" "$refind_drivers_dir"
            fi
        fi
    done
}

function run_sk-chos-daemon() {
    log_info "Running sk-chos-daemon..."
    sudo systemctl daemon-reload
    sudo systemctl restart sk-chos-daemon
}

function auto_reset_etc() {
    local version_file="/frzr_root/.reset-etc-version"
    local version=$(cat /etc/os-release | grep "VERSION_ID" | cut -d'=' -f2 | tr -d '"')
    if [[ -f "$version_file" ]]; then
        if grep -q "^$version$" $version_file; then
            log_info "Version already reset, skipping..."
            return
        fi
    fi
    local reset_etc_flag=/.reset-etc
    if [[ -f "$reset_etc_flag" ]]; then
        log_info "Resetting /etc..."
        sudo /usr/share/sk-chos-tool/scripts/etc_repair.sh && \
        echo "$version" | sudo tee -a $version_file > /dev/null && \
        sudo rm -f $reset_etc_flag
        sleep 10
        sudo reboot
    fi
}

case $ACTION in
"--update")
    copy_efi_drivers
    install_decky
    install_decky_plugins
    install_css_theme
    setup_decky_plugins
    restart_plugin_loader
    device_quirks
    update_udev_rules
    user_setup_after_update
    copy_rime_config
    run_sk-chos-daemon
    auto_reset_etc
    ;;
*)
    set_kernel_options
    recopy_skel
    set_hostname
    copy_efi_drivers
    install_decky
    install_decky_plugins
    install_css_theme
    setup_decky_plugins
    restart_plugin_loader
    device_quirks
    update_udev_rules
    user_setup_after_update
    copy_rime_config
    flatpak_auto_repo
    run_sk-chos-daemon
    ;;
esac
