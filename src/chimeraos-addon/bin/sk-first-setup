        ["ONEXPLAYER 1S A08"]="OXP-1S"
        ["ONEXPLAYER 1S T08"]="OXP-1S"
        ["ONEXPLAYER mini A07"]="OXP-Mini"
        ["ONEXPLAYER mini GA72"]="OXP-Mini"
        ["ONEXPLAYER mini GT72"]="OXP-Mini"
