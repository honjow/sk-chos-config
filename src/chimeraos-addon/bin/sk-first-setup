        ["83E1"]="LegionGo"
        ["83N0"]="LegionGo2"
        ["83N1"]="LegionGo2"
        ["83L3"]="LegionGoS"
        ["83N6"]="LegionGoS"
        ["83Q2"]="LegionGoS"
        ["83Q3"]="LegionGoS"
        
