#!/bin/bash

# ChimeraOS User Daemon
# User-level initialization and configuration tasks

set -o pipefail

source /usr/bin/sk-utils.sh

# Global variables (initialized in main)
VENDOR=""
PRODUCT=""
USER_DIR=""
HOMEBREW_FOLDER=""

function fix_games() {
    if [ -x "$(command -v sk-fix-games)" ]; then
        sk-fix-games
    fi
}

function get_compare_desc() {
    # 数字转为中文描述，0 -> 相等, 正数 -> 大于, 负数 -> 小于
    local compare_result=$1
    if [[ $compare_result -eq 0 ]]; then
        echo "相等"
    elif [[ $compare_result -gt 0 ]]; then
        echo "大于"
    else
        echo "小于"
    fi
}

function compare_version() {
    local version_a=$1
    local version_b=$2
    local version_a_arr
    local version_b_arr
    IFS='.' read -ra version_a_arr <<< "$version_a"
    IFS='.' read -ra version_b_arr <<< "$version_b"

    #
    log_info ">>> Compare version: ${version_a} and ${version_b}" >&2

    # 取两个版本号的最大长度
    local max_len=${#version_a_arr[@]}
    if [[ ${#version_b_arr[@]} -gt $max_len ]]; then
        max_len=${#version_b_arr[@]}
    fi

    for i in $(seq 0 $max_len); do
        if [[ ${version_b_arr[$i]} == "" ]]; then
            version_b_arr[$i]=0
        fi
        if [[ ${version_a_arr[$i]} == "" ]]; then
            version_a_arr[$i]=0
        fi
        # echo ">>> idx: ${i}, ${version_a_arr[$i]}, ${version_b_arr[$i]}" >&2
        if [[ ${version_a_arr[$i]} -gt ${version_b_arr[$i]} ]]; then
            # echo ">> ${version_a_arr[$i]} > ${version_b_arr[$i]}" >&2
            echo "1"
            return
        elif [[ ${version_a_arr[$i]} -lt ${version_b_arr[$i]} ]]; then
            # echo ">> ${version_a_arr[$i]} < ${version_b_arr[$i]}" >&2
            echo "-1"
            return
        fi
    done
    echo "0"
}

function update_decky() {
    log_info "Check Decky update"
    set -e
    version_file="${HOMEBREW_FOLDER}/services/.loader.version"
    boot_flag_file="/tmp/.decky-update-booted"

    if [[ ! -f "${boot_flag_file}" ]]; then
        log_info "Decky update on boot, sleep 10s"
        sleep 10
        touch "${boot_flag_file}"
    fi

    if [[ -f "${version_file}" ]]; then
        raw_version_current=$(cat "${version_file}" 2>/dev/null)
        version_current=$(echo $raw_version_current | sed 's/^v//' | sed 's/-pre/./')
        log_info "Current version: ${raw_version_current}"

        temp_file=$(mktemp)
        curl -s 'https://api.github.com/repos/SteamDeckHomebrew/decky-loader/releases' >$temp_file

        # 删除空格、换行符和其他空白字符
        cleaned_content=$(cat $temp_file | tr -d '[:space:]')
        first_char=${cleaned_content:0:1}
        last_char=${cleaned_content: -1}
        log_info "first character: $first_char, last character: $last_char"

        if [[ "$first_char" != "[" ]] || [[ "$last_char" != "]" ]]; then
            log_error "Failed to get latest release version, first character: $first_char, last character: $last_char"
            return
        fi

        raw_release_version=$(cat $temp_file | jq -r "first(.[] | select(.prerelease == false))" | jq -r '.tag_name')
        # release_version=$(cat $temp_file | jq -r "first(.[] | select(.prerelease == "false"))" | jq -r '.tag_name' | sed 's/^v//')
        release_version=$(echo $raw_release_version | sed 's/^v//' | sed 's/-pre/./')
        log_info "Latest release version: $raw_release_version"

        raw_latest_version=$(cat $temp_file | jq -r "first(.[])" | jq -r '.tag_name')
        # latest_version=$(cat $temp_file | jq -r "first(.[])" | jq -r '.tag_name' | sed 's/^v//' | sed 's/-pre/./')
        latest_version=$(echo $raw_latest_version | sed 's/^v//' | sed 's/-pre/./')
        log_info "Latest version: $raw_latest_version"

        cmp_latest_result=$(compare_version $version_current $latest_version)
        cmp_release_result=$(compare_version $version_current $release_version)

        cmp_latest_desc=$(get_compare_desc ${cmp_latest_result})
        cmp_release_desc=$(get_compare_desc ${cmp_release_result})

        log_info "版本比较结果, 对比最新版本(含预发布): ${cmp_latest_desc}, 对比最新发布版本: ${cmp_release_desc}"

        # 如果当前版本号包含 -pre, 优先通过 github 地址更新
        if [[ $cmp_latest_result -lt 0 ]] && [[ $raw_version_current =~ "-pre" ]]; then
            log_info "Decky 版本过低, 通过 github 地址更新"
            curl -sLk https://github.com/SteamDeckHomebrew/decky-installer/releases/latest/download/install_release.sh | sed 's,#!/bin/sh,#!/bin/sh\nset -e,' | sed 's#| select(.prerelease == "false")##' | sh
        elif [[ $cmp_release_result -lt 0 ]]; then
            log_info "Decky 版本过低, 更新"
            set +e
            curl -L http://dl.ohmydeck.net | sh
            if [[ $? -eq 0 ]]; then
                log_success "Decky 更新成功"
            else
                log_info "Decky 更新失败, 通过 github 地址更新"
                curl -sLk https://github.com/SteamDeckHomebrew/decky-installer/releases/latest/download/install_release.sh | sed 's,#!/bin/sh,#!/bin/sh\nset -e,' | sed 's#| select(.prerelease == "false")##' | sh
            fi
            set -e
        else
            log_info "Decky is up to date"
        fi
    else
        log_info "Decky is not installed, skip update"
    fi
    return 0
}

# 在解决 gpio-keys 电源键问题前, 先屏蔽 steamos-powerbuttond.service
function handle_steamos_powerbutton() {
    local service_name="steamos-powerbuttond.service"

	# 是否检查 gpio-keys 设备
	local check_gpio_keys=false

    # 检查是否存在 gpio-keys 设备
    if [[ "$check_gpio_keys" == "true" ]] && grep -q "gpio-keys" /proc/bus/input/devices 2>/dev/null; then
        log_info "Found gpio-keys device, disabling $service_name"
        systemctl --user stop "$service_name" 2>/dev/null || true
        systemctl --user mask "$service_name" 2>/dev/null || true
    else
        log_info "No gpio-keys device found"

        # 获取服务状态
        local service_status
        service_status=$(systemctl --user is-enabled "$service_name" 2>/dev/null || echo "not-found")

        if [[ "$service_status" == "masked" ]]; then
            log_info "$service_name is masked, unmasking it"
            systemctl --user unmask "$service_name" 2>/dev/null || true
            log_info "$service_name unmasked and enabled"
        else
            log_info "$service_name status: $service_status, keeping as is"
        fi
    fi
}

# 自动设置shell和环境
function setup_shell_and_environment() {
    log_info "Auto set shell"
    if [[ -f /usr/bin/sk-auto-set-shell ]]; then
        /usr/bin/sk-auto-set-shell
    fi
}

# 重置Gamescope屏幕模式
function reset_gamescope_modes() {
    log_info "Reset Internal screen"
    sed -i '/Internal screen/d' "${HOME}/.config/gamescope/modes.cfg"
}

# GPD设备特定配置
function setup_gpd_device() {
    # Check gpdconfig and hhd installation
    if [[ -x "$(command -v gpdconfig)" && "$VENDOR" == "GPD" && -x "$(command -v hhd)" ]]; then
        log_info "Configuring GPD device"
        gpdconfig l41=SYSRQ r41=PAUSE \
            l42=NONE r42=NONE l43=NONE r43=NONE l44=NONE r44=NONE \
            l4delay1=0 r4delay1=0 l4delay2=0 r4delay2=0 \
            l4delay3=0 r4delay3=0 l4delay4=20 r4delay4=20
    fi
}

# GNOME屏幕旋转扩展配置
function setup_gnome_screen_rotation() {
    if ! pacman -Q | grep -q gnome-shell-extension-screen-autorotate; then
        return 0
    fi
    
    log_info "gnome-shell-extension-screen-autorotate is installed, set orientation-offset..."
    
    if [[ ! -x $(command -v gsettings) ]]; then
        return 0
    fi
    
    if [[ -f /usr/libexec/screen-rotate ]]; then
        source /usr/libexec/screen-rotate
        log_info "set orientation-offset ${ROTATE_OFFSET}"
        gsettings set org.gnome.shell.extensions.screen-rotate orientation-offset "${ROTATE_OFFSET}"
        log_info "set manual-flip true"
        gsettings set org.gnome.shell.extensions.screen-rotate manual-flip true
    fi
}

# 安装预下载的oh-my-zsh
function install_ohmyzsh() {
    local pre_path=/usr/local/share/sk-pre
    local zsh_path=$pre_path/zsh
    local pre_zsh_dir=$pre_path/zsh/ohmyzsh
    local pre_zshrc=$pre_path/zsh/.zshrc
    local zshrc_path="${HOME}/.zshrc"

    if [[ -d $pre_zsh_dir ]]; then
        log_info "Installing oh-my-zsh..."
        mkdir -p "${HOME}/.oh-my-zsh"
        rsync -av "${pre_zsh_dir}/" "${HOME}/.oh-my-zsh/"
    fi

    if [[ -f $pre_zshrc ]]; then
        if [[ ! -f "$zshrc_path" ]]; then
            log_info ">> Installing .zshrc..."
            cp $pre_zshrc "${HOME}/.zshrc"
        else
            local zshrc_line
            zshrc_line=$(wc -l $zshrc_path | awk '{print $1}')
            if [[ $zshrc_line -lt 110 ]]; then
                log_info ">>> Installing .zshrc..."
                cp $pre_zshrc "${HOME}/.zshrc"
                rsync -av "${pre_zsh_dir}/" "${HOME}/.oh-my-zsh/"
            else
                cp $pre_zshrc "${HOME}/.zshrc.new"
            fi
        fi
    fi
}

# 系统更新后的首次运行
function run_after_update_setup() {
    local after_update_flag=/.after-update
    local flag_file=/etc/sk-first-setup-done
    
    if [[ ! -f "$after_update_flag" && -f "$flag_file" ]]; then
        log_info "after update run first-run..."
        /usr/bin/sk-first-setup --update
        sudo touch $after_update_flag
    fi
}

# 执行用户自定义启动脚本
function run_user_startup_scripts() {
    local script_dir="$HOME/.config/sk-chos-tool/startup"
    
    if [[ ! -d $script_dir ]]; then
        mkdir -p $script_dir
    fi

    for script_path in "$script_dir"/*; do
        if [[ -f "$script_path" && -x "$script_path" ]]; then
            local script_name
            script_name=$(basename "$script_path")
            log_info "Running startup script: $script_name"

            {
                echo "=== $script_name output start ==="
                "$script_path" 2>&1
                echo "=== $script_name output end ==="
            } | while IFS= read -r line; do
                log_info "[$script_name] $line"
            done &
        fi
    done
}

# KDE桌面locale配置
function setup_kde_locale() {
    if ! pacman -Q | grep -q plasma-desktop; then
        return 0
    fi
    
    if [[ ! -f $HOME/.config/plasma-localerc ]]; then
        return 0
    fi

    local LANG
    local ORIG_LANG
    local E_LANG
    
    LANG=$(grep LANG= $HOME/.config/plasma-localerc | cut -d= -f2)
    ORIG_LANG=$LANG
    LANG=${LANG%%.*}

    if [[ "${ORIG_LANG}" != "${LANG}.UTF-8" ]]; then
        log_info "update plasma-localerc LANG=${LANG}.UTF-8"
        sed -i "s/LANG=.*/LANG=${LANG}.UTF-8/" $HOME/.config/plasma-localerc
    fi

    E_LANG=$(grep LANG= /etc/locale.conf | cut -d= -f2)
    if [[ "${E_LANG}" != "${LANG}.UTF-8" ]]; then
        log_info "update locale.conf LANG=${LANG}.UTF-8"
        echo "LANG=${LANG}.UTF-8" | sudo tee /etc/locale.conf
        sudo locale-gen
    fi
}

# 字体配置复制
function setup_fontconfig() {
    local fontconfig_dir="$HOME/.config/fontconfig/conf.d"
    mkdir -p $fontconfig_dir

    local noto_cjk_conf="75-noto-cjk.conf"
    local sarasa_conf="90-sarasa-gothic.conf"
    
    local noto_cjk_path="/etc/fonts/conf.d/${noto_cjk_conf}"
    local sarasa_path="/etc/fonts/conf.d/${sarasa_conf}"
    
    local user_noto_cjk_path="$fontconfig_dir/${noto_cjk_conf}"
    local user_sarasa_path="$fontconfig_dir/${sarasa_conf}"

    if [[ -f $noto_cjk_path && ! -f $user_noto_cjk_path ]]; then
        log_info "copy $noto_cjk_path to $fontconfig_dir"
        cp $noto_cjk_path $fontconfig_dir
    fi

    if [[ -f $sarasa_path && ! -f $user_sarasa_path ]]; then
        log_info "copy $sarasa_path to $fontconfig_dir"
        cp $sarasa_path $fontconfig_dir
    fi
}

# Gamescope手势禁用
function setup_gamescope_gestures() {
    local gamescope_gestures_conf="$HOME/.config/environment.d/chos-disable-gamescope-gestures.conf"
    
    if [ ! -f $gamescope_gestures_conf ]; then
        /usr/bin/cjust disable-swipe-gestures || true
    fi
}

# 音频和Wireplumber设置
function setup_audio_and_wireplumber() {
    # Audio Fix
    if [ -x "$(command -v sk-audio-setup)" ]; then
        sk-audio-setup
    fi

    # Copy wireplumber config
    if [ -x "/usr/libexec/user-wireplumber" ]; then
        /usr/libexec/user-wireplumber
    fi
}

# 启动后台任务
function start_background_tasks() {
    # Handle steamos powerbutton
    handle_steamos_powerbutton &
    disown

    # Fix games
    fix_games &
    disown

    # Decky update
    nohup bash -c "update_decky" >/dev/null 2>&1 &
    disown
}

# Main function
function main() {
    # Initialize global variables
    VENDOR=$(cat "/sys/class/dmi/id/sys_vendor" 2>/dev/null || echo "")
    PRODUCT=$(cat "/sys/class/dmi/id/product_name" 2>/dev/null || echo "")
    USER_DIR=$HOME
    HOMEBREW_FOLDER="${USER_DIR}/homebrew"

    # Shell and environment setup
    setup_shell_and_environment
    reset_gamescope_modes

    # Device-specific configurations
    setup_gpd_device
    setup_gnome_screen_rotation

    # User environment setup
    install_ohmyzsh
    run_after_update_setup
    run_user_startup_scripts

    # Desktop environment configurations
    setup_kde_locale
    setup_fontconfig
    setup_gamescope_gestures

    # Audio and media setup
    setup_audio_and_wireplumber

    # Start background tasks (must be last)
    start_background_tasks
}

# Script entry point
# Only run main if script is executed directly (not sourced)
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    main "$@"
fi
