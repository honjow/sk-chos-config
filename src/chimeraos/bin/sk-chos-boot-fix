#!/bin/bash

if [ "$EUID" -ne 0 ]; then
    echo "This script must be run as root or with sudo."
    exit 1
fi

# get boot partition
BOOT_DEV=$(lsblk -no PKNAME $(mount | grep ' /boot ' | cut -d' ' -f1))

parted -s /dev/${BOOT_DEV} set 1 esp on
bootctl --esp-path=/boot/ install
parted -s /dev/${BOOT_DEV} set 1 boot on